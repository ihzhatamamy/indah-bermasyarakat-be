NODE_ENV=development
PORT=3000

# MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=indah_bermasyarakat

# JWT
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRE=7d

# Firebase Cloud Messaging
FCM_SERVER_KEY=your-fcm-server-key
FCM_SENDER_ID=your-fcm-sender-id
# Alternatif: FIREBASE_SERVICE_ACCOUNT={"type":"service_account",...}

# Email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=indahbermasyarakat@example.com

# Socket.io
SOCKET_CORS_ORIGIN=*

# Midtrans Payment Gateway
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_MERCHANT_ID=your-midtrans-merchant-id

# Xendit (alternatif payment gateway)
XENDIT_SECRET_KEY=your-xendit-secret-key

# Sentry
SENTRY_DSN=your-sentry-dsn

# File Upload
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=5242880 # 5MB

# Frontend URL (untuk callback payment)
FRONTEND_URL=http://localhost:3000